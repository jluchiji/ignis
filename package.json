  "repository": {
    "type": "git",
    "url": "https://github.com/jluchiji/node-ignis.git"
  },
  "author": "Denis Luchkin-Zhou <denis@ricepo.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jluchiji/node-ignis/issues"
  },
  "homepage": "https://github.com/jluchiji/node-ignis",
  "devDependencies": {
    "chai": "^3.2.0",
    "chai-as-promised": "^5.1.0",
    "gulp": "^3.9.0",
    "gulp-babel": "^5.2.0",
    "gulp-istanbul": "^0.10.0",
    "gulp-jscs": "^2.0.0",
    "gulp-jscs-stylish": "^1.1.2",
    "gulp-jshint": "^1.11.2",
    "gulp-mocha": "^2.1.3",
    "gulp-sourcemaps": "^1.5.2",
    "jshint-stylish": "^2.0.1",
    "sinon": "^1.15.4"
  },
  "dependencies": {
    "bluebird": "^2.9.34",
    "cache-manager": "^1.0.0",
    "debug": "^2.2.0",
    "express": "^4.13.3",
    "lodash": "^3.10.1",
    "monologue.js": "^0.3.3",
    "passport": "^0.3.0",
    "passport-jwt": "^1.1.1",
    "passport-local": "^1.0.0"
